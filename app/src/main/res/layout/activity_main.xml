<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/task"
        style="@style/main_item"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="20dp"
        android:text="任务"
        />

    <Button
        android:id="@+id/flight_info"
        style="@style/main_item"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/task"
        android:text="航班\n信息"
        />

    <Button
        android:id="@+id/check_car"
        style="@style/main_item"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/flight_info"
        android:text="车辆\n检查"
        />

    <Button
        android:id="@+id/setting"
        style="@style/main_item"
        android:layout_below="@+id/task"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="18dp"
        android:text="设置"
        />

    <Button
        android:id="@+id/use_show"
        style="@style/main_item"
        android:layout_below="@+id/flight_info"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/setting"
        android:text="使用\n说明"
        />

    <Button
        android:id="@+id/apply_task"
        style="@style/main_item"
        android:layout_below="@+id/flight_info"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/flight_info"
        android:text="申请\n任务"
        android:visibility="gone"
        />

</RelativeLayout >
